    "qrcode-terminal": "^0.12.0",
    "qrcode": "^1.5.3",
    "sharp": "^0.34.3",
    "whatsapp-web.js": "^1.31.0"
  },
  "devDependencies": {
    "@types/cli-color": "^2.0.6",
    "@types/express": "^4.17.21",
    "@types/node": "^24.2.0",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/qrcode": "^1.5.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }

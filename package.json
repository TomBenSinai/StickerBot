  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "start": "NODE_ENV=production node dist/bot.js",
    "dev": "npm run build && node dist/bot.js",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "setup": "npm run build && node dist/utils/setup.js",
    "setup:all": "npm run setup all",
    "setup:ffmpeg": "npm run setup ffmpeg",
    "setup:chrome": "npm run setup chrome",
    "setup:verify": "npm run setup verify",
    "setup:scripts": "npm run setup scripts",
    "lint": "tsc --noEmit",
    "test": "node --test --require ts-node/register tests/*.test.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "canvas": "^3.1.2",
    "cli-color": "^2.0.4",
